<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/anhdiadiem"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/btnChonAnh"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_add_black_24dp"
                android:background="#30000000"
                android:layout_margin="10dp"
                android:padding="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerChonHinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearTenDiaDiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nhaptendiadiem"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="(*)"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@color/white"/>
            </LinearLayout>

            <EditText
                android:id="@+id/edTenDiaDiem"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="13sp"
                android:layout_weight="1"
                android:hint="@string/tendiadiem"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diachi"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="(*)"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@color/white"/>
            </LinearLayout>

            <EditText
                android:id="@+id/edDiaChi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="13sp"
                android:layout_weight="1"
                android:hint="@string/diachimau"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nhapsodienthoai"/>

            <EditText
                android:id="@+id/edSoDienThoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:inputType="phone"
                android:hint="@string/sodienthoai" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/website"/>

            <EditText
                android:id="@+id/edWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:inputType="textWebEmailAddress"
                android:hint="@string/nhapwebsite"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/danhmuc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp">

                <Spinner
                    android:id="@+id/spinDanhMucCha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_downward_black_24dp"/>

                <GridLayout
                    android:id="@+id/khungDanhMuc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2">

                </GridLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/thoigianhoatdong"
                android:layout_weight="1"/>

            <RadioGroup
                android:id="@+id/rdGroupGioHoatDong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <RadioButton
                    android:id="@+id/rdMoCua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mocuatheolich"
                    android:layout_margin="5dp"/>

                <RadioButton
                    android:id="@+id/rdMoCua24h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mocua24h"
                    android:layout_margin="5dp"/>

                <RadioButton
                    android:id="@+id/rdKhongCoThoiGianHoatDong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/khongcothoigianhoatdong"
                    android:layout_margin="5dp"
                    android:checked="true"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/linearChonGio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/ratingLightGray"
                    android:layout_margin="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/thu2denthu6"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1">

                        <RadioGroup
                            android:id="@+id/rdGroupGioMoCuaThu2Thu6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rdDatGioThu2Thu6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/datgio"
                                android:checked="true"/>

                            <RadioButton
                                android:id="@+id/rdMoCua24hThu2Thu6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mocua24h"/>

                            <RadioButton
                                android:id="@+id/rdKhongMoCuaThu2Thu6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/khongmocua"/>
                        </RadioGroup>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearChonGioThu2Thu6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <Button
                            android:id="@+id/btnGioMoCuaThu2Thu6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/giomocua"/>

                        <Button
                            android:id="@+id/btnGioDongCuaThu2Thu6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/giodongcua"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/ratingLightGray"
                    android:layout_margin="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nhapthu7"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <RadioGroup
                            android:id="@+id/rdGroupGioMoCuaThu7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rdDatGioThu7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/datgio"
                                android:checked="true"/>

                            <RadioButton
                                android:id="@+id/rdMoCua24hThu7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mocua24h"/>

                            <RadioButton
                                android:id="@+id/rdKhongMoCuaThu7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/khongmocua"/>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearChonGioThu7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <Button
                            android:id="@+id/btnGioMoCuaThu7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/giomocua"/>

                        <Button
                            android:id="@+id/btnGioDongCuaThu7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/giodongcua"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/ratingLightGray"
                    android:layout_margin="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nhapchunhat"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <RadioGroup
                            android:id="@+id/rdGroupGioMoCuaChuNhat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rdDatGioChuNhat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/datgio"
                                android:checked="true"/>

                            <RadioButton
                                android:id="@+id/rdMoCua24hChuNhat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mocua24h"/>

                            <RadioButton
                                android:id="@+id/rdKhongMoCuaChuNhat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/khongmocua"/>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearChonGioChuNhat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <Button
                            android:id="@+id/btnGioMoCuaChuNhat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/giomocua"/>

                        <Button
                            android:id="@+id/btnGioDongCuaChuNhat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/giodongcua"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnThemDiaDiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/themdiadiem"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
</ScrollView>